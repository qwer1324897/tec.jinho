<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	 <typeAliases>
	 	<typeAlias type = "com.ch.mvcframework.dto.Board" alias="Board"/>
	 	<typeAlias type = "com.ch.mvcframework.dto.Dept" alias="Dept"/>
	 	<typeAlias type = "com.ch.mvcframework.dto.Emp" alias="Emp"/>
	 </typeAliases>
	 
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="JNDI">
        <property name="data_source" value="java:comp/env/jndi/mysql"/>
      </dataSource>
    </environment>
  </environments>
  
<!-- 자바 코드 대신 쿼리문을 작성해 놓은 파일을 매퍼라고 하며 매퍼의 위치는 아래의 mappers 태그의 자식 태그로 등록해야 한다. -->
  <mappers>
    <mapper resource="com/ch/mvcframework/mybatis/BoardMapper.xml"/>
    <mapper resource="com/ch/mvcframework/mybatis/DeptMapper.xml"/>
    <mapper resource="com/ch/mvcframework/mybatis/EmpMapper.xml"/>
  </mappers>

</configuration>