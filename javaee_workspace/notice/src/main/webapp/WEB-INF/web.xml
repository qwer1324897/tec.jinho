<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>notice</display-name>
	
	<!-- 웰컴 파일 : 굳이 사용자가 웹브라우저에 명시할 필요가 없는 파일명들
			예) http://localhost:8888/index.html 
			여기서 index.html 은 아래 웰컴 목록에 포함되므로 생략 가능
	 -->
		
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- 서블릿 매핑 -->

	<!-- 글 등록 요청처리 매핑 -->
	<servlet>
		<servlet-name>registServlet</servlet-name>
		<servlet-class>com.ch.notice.notice.RegistServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>registServlet</servlet-name>
		<url-pattern>/notice/regist</url-pattern>
	</servlet-mapping>
	
	<!-- 글 삭제 요청처리 매핑 -->
	<servlet>
		<servlet-name>deleteServlet</servlet-name>
		<servlet-class>com.ch.notice.notice.DeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteServlet</servlet-name>
		<url-pattern>/notice/delete</url-pattern>
	</servlet-mapping>
	
		<!-- 글 수정 요청처리 매핑 -->
	<servlet>
		<servlet-name>editServlet</servlet-name>
		<servlet-class>com.ch.notice.notice.EditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>editServlet</servlet-name>
		<url-pattern>/notice/edit</url-pattern>
	</servlet-mapping>

</web-app>